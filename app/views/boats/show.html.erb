<div class="container" style="margin-top: 2%;">

<h1 class="container"><strong><%= @boat.name %></strong> | Location: <%= @boat.location %> | <%= @boat.price_per_day %> â‚¬ per day</h1>
    <% if @boat.photo.attached? %>
      <%= cl_image_tag @boat.photo.key, class: 'boat-image' %>
    <% end %>

 <div class="container" style="margin-top: 10px;">
   <h2>Capacity: <%= @boat.capacity %> people | Size: <%= @boat.size %> meters | Max. speed: <%= @boat.max_speed %> km/h</h2>
</div>
    <div class="container" style="margin-top: 16px;">
      <p><%= @boat.description %></p>
    </div>

<div class="container-forms">
  <div style="margin: 2% 5%;">
    <li class="list-group-item form-owner">
      <p>Owner: <%=  @boat.user[:first_name]  %> </p>

      <% if current_user == @boat.user %>
        <%= link_to 'Edit this Boat', edit_boat_path(@boat), class: 'btn btn-secondary' %>
        <%= link_to "Remove Boat",
                  boat_path(@boat),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: 'btn btn-secondary'%>
        <%= link_to 'Go Back', profiles_boats_path, class: 'btn btn-secondary'%>
      <% else %>
        <%= link_to 'Go Back', boats_path, class: 'btn btn-secondary'%>
      <% end %>

    </li>
  </div>

  <% if user_signed_in? == false %>
    <%= link_to 'SIGN IN TO BOOK', new_user_session_path, class: 'btn btn-secondary'%>
  <% elsif current_user != @boat.user%>
    <%= render "bookings/new" %>
  <% end %>
</div>
