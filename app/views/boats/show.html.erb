
<div class="container">
  <div style="margin-top: 2%">

  <li class="list-group-item form-owner mb-2">
        <h1><strong><%= @boat.name %></strong></h1>
        <p>Owner: <% if @boat.user[:first_name].nil? %>
        <%= "Missing Name" %>
        <% else %>
        <%=  @boat.user[:first_name]  %>
        <% end %> </p>
        <div id="buttons-show">
          <% if current_user == @boat.user %>
            <%= link_to 'Edit This Boat', edit_boat_path(@boat), class: 'btn btn-light' %>
            <%= link_to "Remove Boat",
                      boat_path(@boat),
                      method: :delete,
                      data: { confirm: "Are you sure?" }, class: 'btn btn-light'%>
            <%= link_to 'Go Back', profiles_boats_path, class: 'btn btn-light'%>
          <% else %>
            <%= link_to 'Go Back', boats_path, class: 'btn btn-secondary'%>
            <%= link_to 'Leave a review', new_boat_review_path(@boat),class: 'btn btn-light' %>
          <% end %>
        </li>
      </div>


      <% if @boat.photo.attached? %>
        <%= cl_image_tag @boat.photo.key, class: 'boat-image' %>
      <% end %>

      <div>
        <h2>This Boat is located in: <%= @boat.location %> and cost: <%= @boat.price_per_day %> â‚¬ per day</h2>
        <br>
