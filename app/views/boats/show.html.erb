<div style="margin-top: 2%">

 <li class="list-group-item form-owner mb-2">
      <h1><strong><%= @boat.name %></strong></h1>
      <p>Owner: <% if @boat.user[:first_name].nil? %>
      <%= "Missing Name" %>
      <% else %>
      <%=  @boat.user[:first_name]  %>
      <% end %> </p>
      <% if current_user == @boat.user %>
        <%= link_to 'Edit This Boat', edit_boat_path(@boat), class: 'btn btn-secondary' %>
        <%= link_to "Remove Boat",
                  boat_path(@boat),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, class: 'btn btn-secondary'%>
        <%= link_to 'Go Back', profiles_boats_path, class: 'btn btn-secondary'%>
      <% else %>
        <%= link_to 'Go Back', boats_path, class: 'btn btn-secondary'%>
        <%= link_to 'Leave a review', new_boat_review_path(@boat),class: 'btn btn-secondary' %>
      <% end %>
    </li>


    <% if @boat.photo.attached? %>
      <%= cl_image_tag @boat.photo.key, class: 'boat-image' %>
    <% end %>


<div class="show-container" style="display:flex;">
    <div class="show-description-info ">
      <h2>This Boat is located in: <%= @boat.location %> and cost: <%= @boat.price_per_day %> € per day</h2>
      <h2>Capacity of the boat: <%= @boat.capacity %> tripulants<br> Boat size: <%= @boat.size %> meters<br> Max. speed: <%= @boat.max_speed %> km/h</h2>
      <h2>Boat Description: <br> <%= @boat.description %></h2>
    </div>
    <div class="container" style="width:50%; height: 500px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>

<br>

<div class="show-container">
  <ul class="list-groups" style="display:flex;">
      <% @boat.reviews.each do |review| %>
        <li class="list-group-items">
          <div class="review-div">
            <div class="list-review-div">
              "<%= review.content %>"
            </div>
            <div class="list-review-div">
              <% review.rating.times do  %>
                <i class="fa-solid fa-star"></i>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="medium">
      <div class="container-forms">
        <% if user_signed_in? == false %>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-secondary'%>
        <% elsif current_user != @boat.user%>
          <%= render "bookings/new" %>
        <% end %>
      </div>
    </div>
</div>

<br>

<div>
  <h1>Check other cheaper boats :</h1>
</div>

<div class="recom">
    <% if @boats.length == 0 %>
      <h3>This is the best deal in the Market</h3>
    <% else %>
    <% @boats.each do |boat| %>
      <%= link_to boat_path(boat), class: 'text-decoration' do %>
        <div class="card-recom">
            <% if boat.photo.attached? %>
              <%= cl_image_tag boat.photo.key %>
            <% else %>
             <%= cl_image_tag ("aiftstx1dwmh2dbf1vop88jkxcup") %>
            <% end %>
          <div class="card-recom-info">
              <h4><strong><%= boat.name %></strong></h4>
              <h4><%=boat.price_per_day %> Euros</h4>
              <h4><span>📍</span> <%= boat.location %></h4>
          </div>
          <div class="recom-carac">
                  <p><span>👨‍👨‍👧</span><%=boat.capacity%>p</p>
                  <p><span>📏</span><%= boat.size %>m</p>
                  <p><span>⏳</span><%= boat.max_speed%>Km/h</p>
          </div>
          </div>
        <% end %>
        <% end %>
      <% end %>
  </div>
